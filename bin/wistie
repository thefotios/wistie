#!/usr/bin/env node

var fs = require('fs');
var wistie = require('../lib/wistie');
var cwd = process.cwd();
var hostname = require('os').hostname();

//Default formatter
function wistie_formatter(line) {
   return "\033[91m["+hostname+"]\033[0m "+line+"\n"; 
}

//Choose formatter
fs.exists(cwd+"/wistie_formatter.js", function(exists){
   var formatter = exists ? require(cwd+"/wistie_formatter") : wistie_formatter;
   wistie(formatter);
});
